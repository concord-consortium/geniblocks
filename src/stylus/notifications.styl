.geniblocks.notification-container
  position: fixed
  bottom: 0
  left: 0
  display: flex
  flex-direction: row
  align-items: flex-end
  z-index: 4
  pointer-events: none

  .notification
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    width: 1405px
    height: 189px
    margin: 0 -67px
    padding: 12px
    color: #2d1c06
    pointer-events: all
    background-image: url('../resources/fablevision/huds/scroll.png')

    .message-text
      margin-left: 140px
      margin-top: 23px
      font-family: 'Yanone Kaffeesatz'
      font-size: 2rem
      color: black
      width: 1030px

    .message-buttons
      padding-right: 112px
      height: 100%
      position: relative

      .close-button
        position: absolute
        top: -6px
        right: 111px
        background-image: url('../resources/fablevision/huds/scroll_close.png')
        width: 47px
        height: 45px
        background-repeat: no-repeat
        background-size: contain
        margin-top: 50px
        cursor: pointer

      .next-arrow
        position: absolute
        bottom: 53px
        right: 157px
        background-image: url('../resources/fablevision/huds/arrow_right.png')
        height: 42px
        width: 46px
        background-repeat: no-repeat
        background-size: contain
        cursor: pointer

  .fv-character
    background-image: url('../resources/fablevision/huds/Rajput_active.png')
    width: 325px
    height: 359px
    background-repeat: no-repeat
    background-size: contain
