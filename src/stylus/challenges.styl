    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
  }

  .column {
    display: flex;
    align-items: center;
    flex-direction: column;
    float: left;
    margin-top: 25px;
  }
  .column-label {
    margin-top: 125px;
    margin-bottom: 25px;
    color: white;
    font-size: 14pt;
    font-weight: bold;
  }

  #case-wrapper .column-label {
    margin-top: 25px;
    margin-bottom: 25px;
