.geniblocks.breed-button-surround
  background: url('../resources/fablevision/layout-c/breed_surround.png')
  width: 315px
  height: 369px
  display: flex
  justify-content: center
  background-size: contain
  background-repeat: no-repeat
  align-items: center
  margin-left: -100px
  margin-right: -100px

  .breed-button
    width: 139px
    height: 138px
    display: flex
    justify-content: center
    align-items: center
    margin-top: -55px
    margin-right: -8px
    background: url('../resources/fablevision/layout-c/unclicked_breed_button.png')
    cursor: pointer
    color: #1C3CDB

    &:active
      cursor: default
      background: url('../resources/fablevision/layout-c/clicked_breed_button.png')
      background-size: contain
      background-repeat: no-repeat
      color: #ADD8E6

    &.disabled
      cursor: default
      background: url('../resources/fablevision/layout-c/inactive_breed_button.png')
      color: #ADD8E6

    .breed-button-label
      font-size: 3rem
