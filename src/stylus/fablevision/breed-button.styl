.geniblocks.breed-button-surround
  background: url('../resources/fablevision/layout-c/breed_surround.png')
  width: 370px
  height: 369px
  display: flex
  justify-content: center
  align-items: center

  .breed-button
    width: 139px
    height: 138px
    display: flex
    justify-content: center
    align-items: center
    background: url('../resources/fablevision/layout-c/breed_button_UNCLICKED.png')
    cursor: pointer

    &:active
      cursor: default
      background: url('../resources/fablevision/layout-c/breed_button_CLICKED.png')

    &.disabled
      cursor: default
      background: url('../resources/fablevision/layout-c/Breed_Inactive_Button.png')
      background-size: contain
      background-repeat: no-repeat

    .breed-button-label
      font-size: 54px
      color: white
