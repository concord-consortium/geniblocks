.fv-layout-d
  #mission-wrapper
    margin: 70px 0 0 0
    width: 100%

    #egg-sort-game
      width: 100%
      display: flex
      flex-direction: row

      #eggs
        width: 100%
        height: 100%

      .clutch-egg
        background-image: url('../resources/fablevision/layout-d/egg_unclicked.png')
        background-position: 50% 50%
        background-repeat: no-repeat
        width: 115px
        height: 158px
        opacity: 1
        position: absolute
        margin-left: 49px
        margin-top: 49px
        z-index: 1
        &.selected
          z-index: 0
          margin-left: 0
          margin-top: 0
          width: 213px
          height: 256px
          background-image: url('../resources/fablevision/layout-d/egg_clicked.png')

      #baskets
        width: inherit
        .basket-set
          width:inherit
          align-items: flex-start
          .basket
            bottom: 235px
            right: 250px
            .basket-image
              background-image: url('../resources/fablevision/layout-d/basket_inactive.png')
              width: 505px
              height: 503px
              background-size: contain
              position: absolute
              .basket-label
                width: 133px
                height: 135px
                left: 203px
                top: 352px
                font-family: 'Yanone Kaffeesatz'
                position: absolute
                text-align: center
                display: flex
                flex-direction: column
                justify-content: center
            &.selected .basket-image
              background-image: url('../resources/fablevision/layout-d/basket.png')
              .basket-hover
                width: 250px
                height: 230px
                position: absolute
                left: 130px
                top: 265px
                cursor: pointer
                z-index: 3

      #left-section
        width: 1156px
        display: flex
        justify-content: center
        align-items: center

      #right-section
        position: static

        #container
          background: none
          border: none
          font-family: 'Yanone Kaffeesatz'

          #background
            background: none
            border: none

      .chromomatic
        height: 871px
        width: 764px
        background-image: url('../resources/fablevision/layout-d/chromomatic.png')
        display: flex
        justify-content: center
        align-items: center
        z-index: 2
        margin-left: 10px
