.geniblocks.genome #mountNode .react-selectize-control
  display: flex
  flex-direction: row
  height: 28px
  input
    font-family: "Yanone Kaffeesatz";
    font-size: 1.5rem;

.react-selectize.root-node
    position: relative;
    width: 158px;
    input
      color: transparent
      text-shadow: 0 0 0 black;

.geniblocks.genome 
    #mountNode
      position: relative
      z-index: 1
      margin-left: -10px
      .react-selectize-search-field-and-selected-values
        height: 10px
        display: flex
        flex-direction: row
    .rtl #mountNode
      margin-right: -10px

.geniblocks.genome .fl #mountNode
  margin-top: -30px

.geniblocks.genome #mountNode .react-selectize-search-field-and-selected-values
  height: 40px
  display: flex
  flex-direction: row

.geniblocks.fv-gene-label.allele.noneditable
  &.w
    z-index: 6
  &.h
    z-index: 5
  &.fl
    z-index: 4
  &.hl
    z-index: 3
  &.a
    z-index: 2

.fv-layout

  .geniblocks.fv-gene-label
    font-family: 'Yanone Kaffeesatz'
    font-size: 1.5rem
    color: white
    position: absolute
    display: flex
    flex-direction: row
    justify-content: flex-end
    z-index: 2

  .geniblocks.chromosome-container .items.ltl .labels
    justify-content: flex-start
    padding-left: 30px

  .geniblocks.chromosome-container .items.rtl .labels
    justify-content: flex-start
    padding-right: 30px

  .line
    position: absolute
    margin-top: -3px
    background-color: #fff
    width: 20px
    height: 2px
    top: 15px
    left: -27px

  .fv-gene-label-text
    margin-top: -3px
    margin-left: -2px
    margin-right: -2px

  .items.rtl .line
    margin-left: auto
    left: 0px
    right: -27px

  .small .stripe
    position: absolute
    background-color: #fff
    width: 19px
    height: 10px
    top: 11px
    left: 0px

  .items.rtl .small .stripe
    margin-left: auto
    left: 0px
    right: -19px

  .fl .line
    width: 25px

  .h .line
    width: 21px

  .fl
    .line
      margin-top: -7px
      width: 25px 
    #mountNode
      margin-top: 25px
    .fv-gene-label-text
      margin-top: -21px

  .h
    .line
      margin-top: 1px
      width: 21px 
    #mountNode
      margin-top: 14px
    .fv-gene-label-text
      margin-top: 6px

  .a 
    .line
      margin-top: 6px
      width: 25px 
    #mountNode
      margin-top: 25px
    .fv-gene-label-text
      margin-top: 16px

  .ltl .fl .line
    transform: rotate(-35deg)
    left: -30px
    top: 12px

  .rtl .fl .line
    transform: rotate(35deg)
    right: -29px
    top: 12px

  .ltl .h .line
    transform: rotate(15deg)
    top: 15px

  .rtl .h .line
    transform: rotate(-15deg)
    top: 15px

  .ltl .a .line
    transform: rotate(42deg)
    top: 15px
    left: -30px

  .rtl .a .line
    transform: rotate(-42deg)
    top: 15px
    right: -30px