.gem-container
  .gem-fill
    width: 106px
    height: 158px
    background-size: contain
    background-repeat: no-repeat
  .gem-fill-0
    background-image: url('../resources/fablevision/venture-pad/gem_blue.png')
  .gem-fill-1
    background-image: url('../resources/fablevision/venture-pad/gem_amber.png')
  .gem-fill-2
    background-image: url('../resources/fablevision/venture-pad/gem_ruby.png')

.gem-set
  display: flex
  flex-direction: row
  .gem-container
    margin-left: 10px
    width: 90px
    margin-right: -10px
    .gem-outline-highlight
      width: 100px
      height: 150px
      background-image: url('../resources/fablevision/venture-pad/gemslot_select.png')
      background-size: cover
      background-repeat: no-repeat
      margin-top: -10px
      .gem-fill
        position: absolute
        margin-right: 0
        width: 90px
        height: 150px
        margin-left: 6px
        margin-top: 8px
    .gem-outline
      width: 78px
      height: 138px
      background-image: url('../resources/fablevision/venture-pad/gemslot_empty.png')
      background-repeat: no-repeat
      .gem-number-text
        position: absolute
        margin-left: 27px
        margin-top: 17px