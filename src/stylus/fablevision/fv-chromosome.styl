.fv-chromosome-image
  height: 78px
  width: 27px
  background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_filled.png')
  background-size: contain
  background-repeat: no-repeat

  &.chromosome-y
    height: 55px
    width: 27px
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_filled.png')

  &.small
    background: url('../resources/fablevision/layout-c/chromosome_lite.png')
    height: 122px
    width: 20px

    &.chromosome-x
      background: url('../resources/fablevision/layout-c/chromosome_lite.png')

    &.chromosome-y
      height: 74px
      width: 20px
      background: url('../resources/fablevision/layout-c/chromosome_half_lite.png')

.fv-chromosome-image.empty
.parent .fv-chromosome-image.bold
  background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_empty.png')
  background-size: contain
  background-repeat: no-repeat

  &.chromosome-y
    height: 55px
    width: 27px
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_empty.png')

  &.small
    height: 122px
    width: 20px
    background: url('../resources/fablevision/layout-c/chromosome_dark.png')

    &.chromosome-y
      height: 74px
      width: 20px
      background: url('../resources/fablevision/layout-c/chromosome_half_dark.png')

