.fv-chromosome-image
  height: 78px
  width: 27px
  background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_filled.png')
  background-size: contain
  background-repeat: no-repeat

  &.yChromosome
    height: 55px
    width: 27px
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_filled.png')

  &.small
    background: url('../resources/fablevision/layout-c/chromosome_lite_stripes.png')
    height: 122px
    width: 20px

    &.xChromosome
      background: url('../resources/fablevision/layout-c/chromosome_lite.png')

    &.yChromosome
      height: 74px
      width: 20px
      background: url('../resources/fablevision/layout-c/chromosome_half_lite.png')

.fv-chromosome-image.empty
.parent .fv-chromosome-image.bold
  background: url('../resources/fablevision/layout-c/egg_sperm_chromosome.png')
  background-size: contain
  background-repeat: no-repeat

  &.yChromosome
    height: 55px
    width: 27px
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half.png')

  &.small
    height: 122px
    width: 20px
    background: url('../resources/fablevision/layout-c/chromosome_dark.png')

    &.yChromosome
      height: 74px
      width: 20px
      background: url('../resources/fablevision/layout-c/chromosome_half_dark.png')

