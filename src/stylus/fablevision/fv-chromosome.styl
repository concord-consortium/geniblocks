.fv-chromosome-image
  height: 78px
  width: 27px
  background-image: url('../resources/fablevision/layout-c/egg_sperm_chromosome_filled.png')
  background-size: contain
  background-repeat: no-repeat

  &.chromosome-y
    height: 55px
    width: 27px
    background-image: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_filled.png')

  &.small
    background-image: url('../resources/fablevision/layout-c/chromosome_lite.png')
    height: 122px
    width: 20px

    &.chromosome-y
      height: 74px
      width: 20px
      background-image: url('../resources/fablevision/layout-c/chromosome_half_lite.png')
.test-cross
  .fv-chromosome-image
    background-image: url('../resources/fablevision/layout-i/chromosome_full.png')

    &.chromosome-y
      background-image: url('../resources/fablevision/layout-i/chromosome_full_y.png')

.fv-chromosome-image.empty
.parent .fv-chromosome-image.bold
  background-image: url('../resources/fablevision/layout-c/egg_sperm_chromosome_empty.png')
  background-size: contain
  background-repeat: no-repeat

  &.chromosome-y
    height: 55px
    width: 27px
    background-image: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_empty.png')

  &.small
    height: 122px
    width: 20px
    background-image: url('../resources/fablevision/layout-c/chromosome_dark.png')

    &.chromosome-y
      height: 74px
      width: 20px
      background-image: url('../resources/fablevision/layout-c/chromosome_half_dark.png')

.chromosome-label
  position: relative
  left: 6px
  top: 18px
  font-family: "Yanone Kaffeesatz"
  font-size: 0.9rem
  color: #333
  &.label-x
    top: 54px
  &.label-y
    top: 24px
  &.label-1
    top: 48px
  &.label-2
    top: 48px

.chromosome-allele-container
  .empty
    .chromosome-label
      display:none

.gamete-chromosomes
  .chromosome-label
    display:none
