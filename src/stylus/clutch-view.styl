.geniblocks.clutch-view
  .clutch-drakes
    .organism .clickable-area
      position: absolute
      left: 10px
      top: 30px
      width: 90%
      height: 70%
      cursor: pointer

  .clutch-slider
    margin-top: 50px
    cursor: pointer
    &.right
      background-image: url('../resources/fablevision/layout-b/Clutch_Slider_Arrow_R.png')
      width: 16px
      height: 29px
    &.left
      background-image: url('../resources/fablevision/layout-b/Clutch_Slider_Arrow_L.png')
      width: 16px
      height: 29px

  .drake-pages
    display: flex
    flex-direction: row
    justify-content: space-between
    width: 100%
    .clutch-drakes
      margin-right: 0
      flex-wrap: wrap

  .clutch-page-count
      margin-left: 140px

.layout-b #egg-game .geniblocks.genome.parent
  background-image: none
